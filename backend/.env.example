# Server Configuration
PORT=3000
NODE_ENV=development

# LiveKit Configuration
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://your-project.livekit.cloud

# Database
DATABASE_PATH=./data/sessions.db

# Optional: Production Database (Railway/Render auto-provides DATABASE_URL)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Email Service (Resend) - for password reset emails
RESEND_API_KEY=re_xxxxxxxxx

# Password Reset URL - the base URL for password reset links
PASSWORD_RESET_URL=https://yourapp.com/reset-password
